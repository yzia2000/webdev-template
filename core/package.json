{
  "name": "api",
  "version": "1.0.0",
  "description": "Template API",
  "main": "server.js",
  "scripts": {
    "watch": "tsc -w -p .",
    "dev": "nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.spec.ts' src/server.ts",
    "start": "node ./dist/server.js",
    "build": "tsc -p .",
    "lint": "eslint src",
    "test": "jest --collectCoverage --passWithNoTests --detectOpenHandles",
    "debug": "nodemon --watch ./dist --inspect-brk=0.0.0.0:9229 --nolazy ./dist/server.js",
    "debug:docker": "docker-compose -f docker-compose.debug.yml up --build",
    "dev:docker": "docker-compose up --build",
    "start:docker": "docker-compose -f docker-compose.prod.yml up --build",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build",
    "lint:docker": "docker-compose -f docker-compose.test.yml run sut npm run lint",
    "down": "docker-compose down --remove-orphans"
  },
  "keywords": [],
  "author": "Mohammad Yousuf Minhaj Zia",
  "license": "ISC",
  "dependencies": {
    "argon2": "^0.27.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.4.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "swagger-jsdoc": "^6.0.6",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@glints/eslint-config": "^4.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.31",
    "@types/pg": "^7.14.7",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
